{
  "manifest_version": 1,

  "name": "Updatr",
  "description": "This extension links notifications from several social media outlets in one place.",
  "version": "1.0",

  "permissions": [
    "tab" //maybe needed for future "go to notification" feature
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}