{
  "manifest_version": 2,

  "name": "Updatr",
  "description": "This extension links notifications from several social media outlets in one place.",
  "version": "1.0",
  "icons": {"128": "icon.png"},

  "permissions": [
    "alarms",
    "tabs",
    "webNavigation",
    "*://*.google.com/"
  ],
  
  "browser_action": {
    "default_title": "Updatr",
    "default_icon": "icon.png"
  },
    
  "background":{
    "persistent": true,
    "page": "background.html"
    }

}